section#hero-home.hero-full.hero-knowmore
  .w-container.u-text-center
    .fontsize-megajumbo.u-marginbottom-30.fontweight-semibold
      .w-embed
        .cd-headline.letters.type
          span = t('.banner_before')

          span.cd-words-wrapper
            - t('.banner_words').each do |index, word|
              - if index == 0
                b.is-visible = word
              - else
                b = word
          br
          span = t('.banner_after')
    .w-row
      .w-col.w-col-4.w-col-push-4
        a.btn.btn-large.u-marginbottom-10 href="#{hello_path(ref: 'home_banner')}" Find out more

