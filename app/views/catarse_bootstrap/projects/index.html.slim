        /  = image_tag "https://s3.amazonaws.com/100pp/assets/edspacebanner.jpg", width: "100%", class: "u-margintop-10"
        /<div class="countdown countdown-lg" data-labels="years,months,weeks,days,hour,min,sec" data-from="January 15, 2016 23:03:26"><!-- Example Date From: December 31, 2018 15:03:26 --></div>
